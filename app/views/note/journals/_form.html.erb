        setTimeout(function(){
        UE.getEditor('editor').setContent('<%= @journal.article.html_safe rescue nil%>', true);
      },600)
    }

    $(function(){
      $(".submit_form").click(function(){
        var html_text = UE.getEditor('editor').getContent()
        $("#note_journal_article").val(html_text)
