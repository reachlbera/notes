			var minutes = date.getMinutes();//分钟(0~59)
			var seconds = date.getSeconds();//秒数(0~59)
			var milliseconds = date.getMilliseconds();//毫秒(0~999)
			var milliseconds_original = date.getTime();//返回1970.1.1至今的毫秒数
			var offset = date.getTimezoneOffset();//本地时间与格林威治标准时间(GMT)的分钟差。
			var day_month_utc = date.getUTCDate();//根据世界时从 Date 对象返回月中的一天 (1 ~ 31)。
			var day_week_utc = date.getUTCDay();//返回周中的一天 (0 ~ 6)。
			var month_utc = date.getUTCMonth();//返回月份 (0 ~ 11)。
			target.innerText = (month+1)+"月"+day_month+"日 "+match_week(day_week)+"\n"+
						hours+":"+match_single(minutes)+":"+match_single(seconds)//+"."+milliseconds;
