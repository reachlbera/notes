	function get_time(){
		setInterval(function(){
			var target = document.getElementById('time')
			var date = new Date;
			var day_month = date.getDate();//一个月中的某一天（1~31）
			var day_week = date.getDay();//一个周中的某一天(0~6)
			var month = date.getMonth();//月份(0~11)
			var year = date.getFullYear();//年份
